{
    "app-id": "org.gabmus.hydrapaper",
    "command": "hydrapaper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "hydrapaper",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=system-bus",
        "--share=network",

        "--talk-name=org.gnome.SettingsDaemon",

        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=~/.config/hydrapaper:rw",
        "--talk-name=ca.desrt.dconf",

        "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt"
    ],
    "modules": [
        {
            "name": "hydrapaper",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [{
                "type": "archive",
                "url": "https://github.com/GabMus/hydrapaper/archive/1.0.tar.gz",
                "sha256": "e61a47074f0aa5198b0173df9c56358fcb6d75e4f0a7234e3b9e21df406ef515"
            }]
        },
        {
            "name": "imagemagick",
            "buildsystem": "autotools",
            "builddir": true,
            "sources": [{
                "type": "archive",
                "url": "https://www.imagemagick.org/download/ImageMagick.tar.gz",
                "sha256": "a37ac4c4371e8651a0c94d17bd83749511d562bbdbc91be8a27b19d4758201fa"
            }]
        },
        {
            "name": "python-wand",
            "buildsystem": "simple",
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py build",
                "python3 setup.py install --root=/app --optimize=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/dahlia/wand/archive/0.4.4.tar.gz",
                    "sha256": "d63c6461b8e04a732a70ae033dff6b519910337d4c6f985947172f7fbb325854"
                }
            ]
        }
    ]
}
